<h1> Parks Directory </h1>

<div> 
    <% @parks.each do |park| %>
    <ul>
        <li><%=link_to park.name, park_path(park.id)  %></li>
    </ul>
    <% end %>
</div>

<% if false %>

<div>
    <div>
        <h1> Parks Directory </h1>
    </div>

    <div>
        <ul>
            <% @parks.each do |park| %>
                <li><%= link_to park.name, park_path(park.id), data: { turbo_frame: 'park_details' } %></li>
            <% end %>
        </ul>

        <div>
            <%= turbo_frame_tag "park_details" do %>
                Click on a park for more details
            <% end %>
        </div>
    </div>
</div>

<% end %>